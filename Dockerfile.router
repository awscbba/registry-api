FROM public.ecr.aws/lambda/python:3.13

# Install uv for dependency management
RUN pip install uv

# Copy uv project files for dependency resolution
COPY pyproject.toml ./
COPY uv.lock ./

# Install minimal dependencies for router (only what's needed for routing)
# Router only needs boto3, logging, and basic Python libraries
RUN uv pip install --system boto3 python-json-logger

# Copy router code
COPY router_main.py ./

# Set the CMD to the router handler
CMD ["router_main.lambda_handler"]